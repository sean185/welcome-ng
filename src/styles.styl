sui-modal
    .arrows
        cursor pointer
        font-size 3em
        color white
        position absolute
        top 0
        height 100%
        width 3em
        display flex
        justify-content center
        align-items center
        &.next
            right -3em
        &.prev
            left -3em
    .image.content
        .caption, .meta
            padding-top: 0.5em
            padding-left: 0.5em
        .meta
            color rgba(0,0,0,.4)