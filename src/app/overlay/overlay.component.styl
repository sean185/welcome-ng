.mobile.only
	@media only screen and (min-width: 700px)
		display none !important

.computer.only
	@media only screen and (max-width: 700px)
		display none !important

#topnav
	.react .image
		background dimgray

.masthead
	&.segment
		min-height 700px
		padding 1em 0em
		background url("/assets/images/blue_mountains_taiwan.jpg") !important
	.logo
		&.item
			img
				margin-right 1em
	.ui
		&.menu
			.ui
				&.button
					margin-left 0.5em
	h1
		&.ui
			&.header
				color navy
				margin-top 3em
				margin-bottom 0em
				font-size 4em
				font-weight normal
	h2
		color darkblue
		font-size 1.7em
		font-weight normal
	p
		color darkblue